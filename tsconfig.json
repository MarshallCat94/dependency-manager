{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "target": "ES2017",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.*"],
  "ts-node": {
    "files": true
  }
}
